<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
        <link rel="stylesheet" href="../../public/css/profile_collection.css">
        <link rel="stylesheet" href="../../public/css/profile_banner.css">

    <body>
        <%- include('partials/header') %>

    <main>
        <%- include('partials/profile_banner') %>

        <section id="profile_header">
            <nav id="profile_menu">
                <ul id="profile_menu_links">
                    <li><a href="/profile/Favs"><i class="fas fa-heart"></i><p>Likes</p></a></li>
                    <li><a id="current" href="/profile"><i class="fas fa-folder"></i><p>Collection</p></a></li>
                    <li><a href="/profile/Create" ><i class="fas fa-file-upload"></i><p>Create</p></a></li>
                    <li><a href=""><i class="fas fa-chart-bar"></i><p>Stats</p></a></li>
                    <li><a href="/profile/Settings"><i class="fas fa-cog"></i><p>Settings</p></a></li>
                </ul>
            </nav>

        </section>
        <section id="collected_cards">
            
            <% collection.forEach(product => { %>
                <%- include('partials/profileProdCard', { product , cardStyle }) %>
            <% })%>
                
            <article id="create_card" class="property-card">
                <a class = 'property-card-links' href="/profile/Create">
                    <h4>Create new card</h4>
                    <i class="far fa-plus-square"></i>
                </a>
            </article>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>

</html>